<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/persistent_damage_apply_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginBottom="2dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBackgroundLight"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/persistent_damage_apply_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/persistent_damage_apply_values_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/persistent_damage_apply_name_textView" />

        <TextView
            android:id="@+id/persistent_damage_apply_description_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_hint"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/persistent_damage_apply_values_textView" />

        <TextView
            android:id="@+id/persistent_damage_apply_override_warning_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/persistent_damage_must_override"
            android:textColor="@color/colorAccent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/persistent_damage_apply_overridden_editText" />


        <EditText
            android:id="@+id/persistent_damage_apply_overridden_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="5"
            android:selectAllOnFocus="true"
            card_view:layout_constraintBottom_toBottomOf="@+id/persistent_damage_apply_do_button"
            card_view:layout_constraintEnd_toStartOf="@+id/persistent_damage_apply_overridden_textView"
            card_view:layout_constraintTop_toTopOf="@+id/persistent_damage_apply_do_button" />

        <TextView
            android:id="@+id/persistent_damage_apply_overridden_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/persistent_damage_override"
            card_view:layout_constraintBottom_toBottomOf="@+id/persistent_damage_apply_do_button"
            card_view:layout_constraintEnd_toStartOf="@+id/persistent_damage_apply_do_button"
            card_view:layout_constraintTop_toTopOf="@+id/persistent_damage_apply_do_button" />

        <Button
            android:id="@+id/persistent_damage_apply_do_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/persistent_damage_apply"
            card_view:layout_constraintTop_toBottomOf="@id/persistent_damage_apply_description_textView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
